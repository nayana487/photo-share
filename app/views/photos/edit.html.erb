<div class="well">
<h2>Edit Photo</h2>

<%= form_for [@album, @photo] do |f| %>
  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :settings %>
  <%= f.text_area :settings, size: "30x10" %>

  <%= f.submit "Edit" %>
<% end %>
</div>

<h2> <%= link_to "Delete Photo",[@album,@photo], method: :delete, data: {confirm: "Are you sure?"} %> </h2>
<h2> <%= link_to "< back to Album", album_path(@album) %> </h2>
